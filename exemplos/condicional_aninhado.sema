ler(horario) -> h;
ler(fluxo) -> f;

if (h >= 7 && h <= 9) {
    if (f > 35) {
        mudar(verde);
        esperar(25);
    } else {
        mudar(verde);
        esperar(15);
    }
} else {
    if (f < 10) {
        mudar(vermelho);
        esperar(8);
    } else {
        mudar(verde);
        esperar(12);
    }
}
mudar(amarelo);
esperar(2);


